{
    "name": "nexi-checkout/shopware6-checkout",
    "description": "Nexi Checkout integration for Shopware 6",
    "type": "shopware-platform-plugin",
    "version": "2.0.0-beta4",
    "license": "MIT",
    "require": {
        "php": "~8.2.0 || ~8.3.0",
        "shopware/core": "~6.6.0",
        "shopware/storefront": "~6.6.0",
        "giggsey/libphonenumber-for-php-lite": "^8.12",
        "nexi-checkout/php-payment-sdk": "^0.5"
    },
    "extra": {
        "shopware-plugin-class": "Nexi\\Checkout\\NexiCheckout",
        "label": {
            "de-DE": "Nexi Checkout",
            "en-GB": "Nexi Checkout"
        }
    },
    "autoload": {
        "psr-4": {
            "Nexi\\Checkout\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Nexi\\Checkout\\Tests\\": "tests/"
        }
    },
    "config": {
        "allow-plugins": {
            "symfony/runtime": true
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^11",
        "phpstan/phpstan": "^1.11",
        "symplify/easy-coding-standard": "^12.2",
        "rector/rector": "^1.1"
    }
}
