{
    "name": "nexi-checkout/shopware6-checkout",
    "description": "Nexi Checkout integration for Shopware 6",
    "type": "shopware-platform-plugin",
    "version": "2.0.1",
    "license": "MIT",
    "authors": [
        {
            "name": "Nexi|Nets"
        }
    ],
    "require": {
        "php": "~8.2.0 || ~8.3.0 || ~8.4.0",
        "shopware/core": "~6.6.0 || ~6.7.0",
        "shopware/storefront": "~6.6.0 || ~6.7.0",
        "giggsey/libphonenumber-for-php-lite": "^8.12",
        "nexi-checkout/php-payment-sdk": "^0.8"
    },
    "extra": {
        "shopware-plugin-class": "Nexi\\Checkout\\NexiCheckout",
        "label": {
            "de-DE": "Nexi Checkout",
            "en-GB": "Nexi Checkout"
        },
		"description" : {
			"de-DE" : "Nets Payment Plugin. Unser Nexi Checkout-Plugin ist die perfekte Möglichkeit für Sie, eine Checkout-Lösung für Ihr Geschäft und Ihre Verbraucher zu ermöglichen.",
			"en-GB" : "Our Nexi Checkout plugin is the perfect way for you to enable a checkout solution for your store and consumers. Nexi Checkout supports most of the popular payment methods."
		},
		"manufacturerLink": {
			"de-DE": "https://developer.nexigroup.com/nexi-checkout/en-EU/docs/shopware/checkout-for-shopware-67-shopware-67/",
			"en-GB": "https://developer.nexigroup.com/nexi-checkout/en-EU/docs/shopware/checkout-for-shopware-67-shopware-67/"
		},
		"supportLink": {
			"de-DE": "https://developer.nexigroup.com/nexi-checkout/en-EU/support/",
			"en-GB": "https://developer.nexigroup.com/nexi-checkout/en-EU/support/"
		}
    },
    "autoload": {
        "psr-4": {
            "Nexi\\Checkout\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Nexi\\Checkout\\Tests\\": "tests/"
        }
    },
    "config": {
        "allow-plugins": {
            "symfony/runtime": true
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^11",
        "phpstan/phpstan": "^1.11",
        "symplify/easy-coding-standard": "^12.2",
        "rector/rector": "^1.1"
    }
}
