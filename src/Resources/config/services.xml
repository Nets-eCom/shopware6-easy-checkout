<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="NexiNets\Handler\HostedPayment">
            <argument type="service" id="NexiNets\RequestBuilder\PaymentRequest"/>
            <argument type="service" id="NexiNets\CheckoutApi\Factory\PaymentApiFactory"/>
            <argument type="service" id="NexiNets\Configuration\ConfigurationProvider"/>
            <argument type="service" id="order_transaction.repository"/>
            <argument type="service" id="Shopware\Core\Checkout\Order\Aggregate\OrderTransaction\OrderTransactionStateHandler"/>
            <tag name="shopware.payment.method.async" />
        </service>

        <service id="NexiNets\Entity\NexiNetsPaymentApi\NexiNetsPaymentDefinition">
            <tag name="shopware.entity.definition" entity="nexinets_payment" />
        </service>

        <service id="NexiNets\Configuration\ConfigurationProvider">
            <argument type="service" id="Shopware\Core\System\SystemConfig\SystemConfigService"/>
        </service>

        <service id="NexiNets\RequestBuilder\PaymentRequest">
            <argument type="service" id="NexiNets\RequestBuilder\PaymentRequest\CheckoutBuilderFactory"/>
            <argument type="service" id="NexiNets\RequestBuilder\PaymentRequest\ItemsBuilder"/>
            <argument type="service" id="NexiNets\RequestBuilder\PaymentRequest\NotificationBuilder"/>
            <argument type="service" id="NexiNets\RequestBuilder\Helper\FormatHelper"/>
        </service>

        <service id="NexiNets\RequestBuilder\PaymentRequest\ItemsBuilder">
            <argument type="service" id="NexiNets\RequestBuilder\Helper\FormatHelper"/>
        </service>

        <service id="NexiNets\RequestBuilder\PaymentRequest\CustomerBuilder">
            <argument type="service" id="NexiNets\RequestBuilder\PaymentRequest\AddressBuilder"/>
            <argument type="service" id="NexiNets\RequestBuilder\PaymentRequest\PhoneNumberBuilder"/>
        </service>

        <service id="NexiNets\RequestBuilder\PaymentRequest\NotificationBuilder">
            <argument type="service" id="NexiNets\Configuration\ConfigurationProvider"/>
            <argument type="service" id="router"/>
        </service>

        <service id="NexiNets\RequestBuilder\PaymentRequest\PhoneNumberBuilder"/>

        <service id="NexiNets\RequestBuilder\PaymentRequest\AddressBuilder"/>

        <service id="NexiNets\RequestBuilder\Helper\FormatHelper"/>

        <service id="NexiNets\RequestBuilder\PaymentRequest\CheckoutBuilderFactory">
            <argument type="service" id="NexiNets\Configuration\ConfigurationProvider"/>
            <argument type="service" id="NexiNets\RequestBuilder\PaymentRequest\CustomerBuilder"/>
            <argument type="service" id="router"/>
        </service>

        <service id="NexiNets\RequestBuilder\ChargeRequest"/>
        <service id="NexiNets\RequestBuilder\RefundRequest"/>

        <!-- ### SDK ### -->
        <service id="NexiNets\CheckoutApi\Factory\PaymentApiFactory">
            <argument type="service" id="NexiNets\CheckoutApi\Factory\HttpClientFactory"/>
            <argument type="service" id="NexiNets\Http\HttpClientConfigurationProvider"/>
        </service>

        <service id="NexiNets\CheckoutApi\Factory\HttpClientFactory">
            <argument type="service" id="Psr\Http\Client\ClientInterface"/>
            <argument type="service" id="Psr\Http\Message\RequestFactoryInterface"/>
            <argument type="service" id="Psr\Http\Message\StreamFactoryInterface"/>
        </service>

        <service id="NexiNets\Http\HttpClientConfigurationProvider">
            <argument>%kernel.shopware_version%</argument>
        </service>

        <service id="NexiNets\Fetcher\PaymentFetcher">
            <argument type="service" id="NexiNets\CheckoutApi\Factory\PaymentApiFactory"/>
            <argument type="service" id="NexiNets\Configuration\ConfigurationProvider"/>
        </service>

        <service id="NexiNets\Order\OrderCharge">
            <argument type="service" id="NexiNets\CheckoutApi\Factory\PaymentApiFactory"/>
            <argument type="service" id="NexiNets\Configuration\ConfigurationProvider"/>
            <argument type="service" id="NexiNets\RequestBuilder\ChargeRequest"/>
        </service>

        <service id="NexiNets\Order\OrderRefund">
            <argument type="service" id="NexiNets\CheckoutApi\Factory\PaymentApiFactory"/>
            <argument type="service" id="NexiNets\Configuration\ConfigurationProvider"/>
            <argument type="service" id="NexiNets\RequestBuilder\RefundRequest"/>
        </service>

        <!-- ### Webhooks ### -->
        <service id="NexiNets\Storefront\Controller\WebhookController" public="true">
            <argument type="service" id="NexiNets\Security\WebhookVoter"/>
            <argument type="service" id="NexiNets\WebhookProcessor\WebhookProcessor"/>
            <argument type="service" id="monolog.logger.nexinets_channel"/>
            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>
        </service>

        <service id="NexiNets\Security\WebhookVoter">
            <argument type="service" id="NexiNets\Configuration\ConfigurationProvider"/>
            <argument type="service" id="request_stack"/>
            <argument type="service" id="monolog.logger.nexinets_channel"/>
        </service>

        <service id="NexiNets\WebhookProcessor\WebhookProcessor">
            <argument type="tagged_iterator" tag="nexinets.webhook_processor"/>
        </service>

        <service id="NexiNets\WebhookProcessor\Processor\ChargeCreated">
            <argument type="service" id="order_transaction.repository"/>
            <argument type="service" id="Shopware\Core\Checkout\Order\Aggregate\OrderTransaction\OrderTransactionStateHandler"/>
            <argument type="service" id="NexiNets\Fetcher\PaymentFetcher"/>
            <argument type="service" id="monolog.logger.nexinets_channel"/>
            <tag name="nexinets.webhook_processor" />
        </service>

        <service id="NexiNets\WebhookProcessor\Processor\CheckoutCompleted">
            <argument type="service" id="order_transaction.repository"/>
            <argument type="service" id="Shopware\Core\Checkout\Order\Aggregate\OrderTransaction\OrderTransactionStateHandler"/>
            <argument type="service" id="NexiNets\Fetcher\PaymentFetcher"/>
            <argument type="service" id="monolog.logger.nexinets_channel"/>
            <tag name="nexinets.webhook_processor" />
        </service>

        <service id="NexiNets\WebhookProcessor\Processor\RefundCompleted">
            <argument type="service" id="order_transaction.repository"/>
            <argument type="service" id="Shopware\Core\Checkout\Order\Aggregate\OrderTransaction\OrderTransactionStateHandler"/>
            <argument type="service" id="NexiNets\Fetcher\PaymentFetcher"/>
            <argument type="service" id="monolog.logger.nexinets_channel"/>
            <tag name="nexinets.webhook_processor" />
        </service>

        <service id="NexiNets\WebhookProcessor\Processor\CancelCreated">
            <argument type="service" id="order_transaction.repository"/>
            <argument type="service" id="Shopware\Core\Checkout\Order\Aggregate\OrderTransaction\OrderTransactionStateHandler"/>
            <argument type="service" id="monolog.logger.nexinets_channel"/>
            <tag name="nexinets.webhook_processor" />
        </service>

        <!-- ### Subscribers ### -->
        <service id="NexiNets\Subscriber\PaymentCancelSubscriber">
            <argument type="service" id="NexiNets\CheckoutApi\Factory\PaymentApiFactory"/>
            <argument type="service" id="NexiNets\Configuration\ConfigurationProvider"/>
            <argument type="service" id="order.repository"/>
            <argument type="service" id="Shopware\Core\Checkout\Order\Aggregate\OrderTransaction\OrderTransactionStateHandler"/>
            <argument type="service" id="NexiNets\RequestBuilder\Helper\FormatHelper"/>
            <tag name="kernel.event_subscriber"/>
        </service>

        <!-- ### Flow Builder -->
        <service id="NexiNets\Core\Content\Flow\Dispatching\Action\ChargeAction">
            <argument type="service" id="NexiNets\Order\OrderCharge"/>
            <tag name="flow.action" priority="600" key="action.nexinets.charge"/>
        </service>

        <!-- ### Admin Controller ### -->
        <service id="NexiNets\Administration\Controller\OrderActionController" public="true">
            <argument type="service" id="order.repository"/>
            <argument type="service" id="NexiNets\Order\OrderCharge"/>
            <argument type="service" id="NexiNets\Order\OrderRefund"/>
            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>
        </service>

        <service id="NexiNets\Administration\Controller\PaymentDetailController" public="true">
            <argument type="service" id="order.repository"/>
            <argument type="service" id="NexiNets\Fetcher\PaymentFetcher"/>
            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>
        </service>
    </services>
</container>